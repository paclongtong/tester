<Window x:Class="friction_tester.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:friction_tester"
        mc:Ignorable="d"
        Title="SettingWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="620*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <!-- Hard Limit Enabled -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                <TextBlock Text="{DynamicResource HardLimitEnable}" FontWeight="Bold" VerticalAlignment="Center"/>
                <CheckBox x:Name="IsHardLimitEnabledCheckBox" IsChecked="{Binding IsHardLimitEnabled}" HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Soft Limit Min -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                <TextBlock Text="{DynamicResource SoftLimitMin}" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox x:Name="SoftLimitMinTextBox" Text="{Binding SoftLimitMin, ValidatesOnExceptions=True}" 
                         Width="200" Height="30"  HorizontalAlignment="Left"
                         PreviewTextInput="NumericInput_PreviewTextInput"/>
            </StackPanel>

            <!-- Soft Limit Max -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                <TextBlock Text="{DynamicResource SoftLimitMax}" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox x:Name="SoftLimitMaxTextBox" Text="{Binding SoftLimitMax, ValidatesOnExceptions=True}" 
                         Width="200" Height="30" HorizontalAlignment="Left"
                         PreviewTextInput="NumericInput_PreviewTextInput"/>
            </StackPanel>

            <!-- Speed to Origin -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                <TextBlock Text="{DynamicResource HomeReturnSpeed}" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox x:Name="HomeReturnSpeedTextBox" Text="{Binding HomeReturnSpeed, ValidatesOnExceptions=True}" 
                         Width="200" Height="30" HorizontalAlignment="Left"
                         PreviewTextInput="NumericInput_PreviewTextInput"/>
            </StackPanel>

            <!-- Language Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                <TextBlock Text="{DynamicResource LanguageSelect}" FontWeight="Bold" VerticalAlignment="Center"/>
                <ComboBox x:Name="LanguageComboBox" Width="200" SelectedItem="{Binding SelectedLanguage}" SelectionChanged="LanguageComboBox_SelectionChanged">
                    <ComboBoxItem Content="English" Tag="en-US"/>
                    <ComboBoxItem Content="中文" Tag="zh-CN"/>
                    <ComboBoxItem Content="Русский" Tag="ru-RU"/>
                    <ComboBoxItem Content="Français" Tag="fr-FR"/>
                </ComboBox>
            </StackPanel>

            <!-- Save Button -->
            <Button Content="{DynamicResource SaveSettings}" Command="{Binding SaveCommand}" Width="404" Height="40" Margin="20" Click="SaveSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>
