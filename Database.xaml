<Window x:Class="friction_tester.DatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:friction_tester"
        mc:Ignorable="d"
        Title="数据库" Height="450" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="717*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="325*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Grid.Row="0" Grid.ColumnSpan="2">
            <TextBox x:Name="SearchBox" Width="200" Margin="0,0,10,0" Text="{DynamicResource SearchByTestName}" />
            <Button x:Name="SearchButton" Content="{DynamicResource Search}" Width="100" Click="SearchButton_Click"/>
            <Button x:Name="RefreshButton" Content="{DynamicResource Refresh}" Width="100" Margin="10,0,0,0" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- DataGrid for Test Results -->
        <DataGrid x:Name="ResultsDataGrid" Grid.Row="1" Margin="10,10,10,10" AutoGenerateColumns="False" IsReadOnly="True" Grid.RowSpan="2" Grid.ColumnSpan="2" SelectionChanged="ResultsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource TestName}" Binding="{Binding TestName}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource Timestamp}" Binding="{Binding Timestamp}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource Velocity}" Binding="{Binding Velocity}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource Acceleration}" Binding="{Binding Acceleration}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource StartPosition}" Binding="{Binding StartPosition}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource EndPosition}" Binding="{Binding EndPosition}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource TestDuration}" Binding="{Binding TotalDuration}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="540,10,0,10" Grid.Row="3" Grid.ColumnSpan="2">
            <Button x:Name="DisplayResultButton" Content="{DynamicResource DisplayResult}" Width="100" Click="DisplayResultButton_Click" />
            <Button x:Name="DeleteButton" Content="{DynamicResource DeleteSelected}" Width="150" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
