<Window x:Class="friction_tester.DisplayResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Display Test Result" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- OxyPlot PlotView -->
        <oxy:PlotView x:Name="PlotView" Grid.Row="0" Margin="10"/>
        <!-- Output to Image button -->
        <Button x:Name="OutputImageButton" Content="{DynamicResource OutputImage}" Grid.Row="1" Margin="10" HorizontalAlignment="Right" Width="200" Height="30" Click="OutputImageButton_Click"/>
    </Grid>
</Window>
